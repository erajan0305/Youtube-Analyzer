# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# An example controller showing a sample home page
+ nocsrf
GET     /                           controllers.YoutubeAnalyzerController.index(request: Request)
+ nocsrf
POST    /                           controllers.YoutubeAnalyzerController.fetchVideosByKeywords(request: Request)
+ nocsrf
GET    /:term                      controllers.YoutubeAnalyzerController.fetchSimilarityStats(term: String)

+ nocsrf
GET     /channel/:id                controllers.YoutubeAnalyzerController.fetchChannelInformation(id: String)

# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.versioned(path="/public", file: Asset)
